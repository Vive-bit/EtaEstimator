<Window x:Class="EtaEstimator.WpfDemo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ETA Estimator" Height="460" Width="1320"
        WindowStartupLocation="CenterScreen">

	<Grid Margin="16">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="2*"/>
		</Grid.ColumnDefinitions>

		<StackPanel Grid.Column="0" Margin="0,0,16,0">
			<TextBlock Text="Settings" FontWeight="Bold" FontSize="14" Margin="0 0 0 8"/>
			<UniformGrid Rows="4" Columns="2" Margin="0 0 0 8">
				<TextBlock Text="Total units:" VerticalAlignment="Center"/>
				<TextBox Text="{Binding TotalUnits}" />

				<TextBlock Text="Units per step:" VerticalAlignment="Center"/>
				<TextBox Text="{Binding UnitsPerStep}" />

				<TextBlock Text="Random delay:" VerticalAlignment="Center"/>
				<CheckBox IsChecked="{Binding UseRandomDelay}" />

				<TextBlock Text="Fixed delay (ms):" VerticalAlignment="Center"/>
				<TextBox Text="{Binding FixedDelayMs}" />
			</UniformGrid>

			<StackPanel Orientation="Horizontal">
				<Button Content="Create" Command="{Binding CreateCommand}" Width="90"/>
				<Button Content="Step"   Command="{Binding StepCommand}"   Width="90"/>
				<Button Content="{Binding AutoButtonText}"
                        Command="{Binding ToggleAutoCommand}" Width="90"/>
				<Button Content="Reset"  Command="{Binding ResetCommand}"  Width="90"/>
			</StackPanel>
		</StackPanel>

		<StackPanel Grid.Column="1">
			<TextBlock Text="Output" FontWeight="Bold" FontSize="14" Margin="0 0 0 8"/>
			<UniformGrid Rows="4" Columns="2" Margin="0 0 0 8">
				<TextBlock Text="Done / Total:"/>
				<TextBlock Text="{Binding DoneTotal}" FontFamily="Consolas"/>

				<TextBlock Text="Progress:"/>
				<TextBlock Text="{Binding ProgressText}" FontFamily="Consolas"/>

				<TextBlock Text="ETA:"/>
				<TextBlock Text="{Binding EtaFormatted}" FontFamily="Consolas"/>

				<TextBlock Text="ETA (sec):"/>
				<TextBlock Text="{Binding EtaSeconds}" FontFamily="Consolas"/>
			</UniformGrid>

            <ProgressBar Height="20"
                         Minimum="0"
                         Maximum="100"
                         Value="{Binding ProgressPercent, Mode=OneWay}" />
        </StackPanel>
	</Grid>
</Window>
